{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true, 
      "skipLibCheck": true,
      "types": ["node", "express"],
      "jsx": "react-jsx"
   },
   "include": ["src/**/*", "src/entity"],
   "exclude": ["node_modules"]
}